<!DOCTYPE html>
<html>
  <head>
    <title>게임스북</title>
    <link rel="stylesheet" type="text/css" href="../styles.css" />
  </head>
  <body>
    <div class="header">
      <div class="header-content">
        <a href="/newspeed">
          <img class="logo" src="../logo.png" alt="Logo" />
        </a>

        <div class="user-section">
          <% if (user) { %>
          <button
            style="background: none; border: none"
            onclick="location.href='/mypage'"
          >
            <img
              class="post-profile-pic"
              src="<%= user.profileUrl %>"
              alt="<%= user.name %>'s profile picture"
            />
          </button>
          <button id="logoutButton" type="button">로그아웃</button>
          <% } else { %>
          <button type="button">로그인</button>
          <% } %>
        </div>
      </div>
    </div>
    <div id="post-form-id" class="post-form">
      <form action="/post" method="POST" enctype="multipart/form-data">
        <h1>글 작성하기</h1>
        <label>
          제목:
          <input
            type="text"
            name="title"
            placeholder="제목을 입력해주세요"
            required
          />
        </label>
        <label>
          내용:
          <input
            type="text"
            name="content"
            placeholder="내용을 입력해주세요"
            required
          />
        </label>
        <label>
          게시글 이미지 첨부:
          <input type="file" name="profileimage" />
        </label>
        <button type="submit">작성하기</button>
      </form>
    </div>
    <div class="sidebar">
      <h2>친구 목록</h2>
      <ul class="friend-list"></ul>
      <div class="friend" id="friend-list-container"></div>
    </div>
    <% posts.forEach(post => { %>
    <div class="post">
      <div class="post-header">
        <img
          class="post-profile-pic"
          src="<%= post.user.profileUrl ? post.user.profileUrl : '/path/to/default/image' %>"
          alt="<%= post.user.name %>'s profile picture"
        />
        <h2 class="post-username"><%= post.user.name %></h2>
        <form
          class="delete-form"
          action="/post/<%= post.postId %>"
          method="POST"
        >
          <input type="hidden" name="_method" value="DELETE" />
          <button type="submit">게시글 삭제</button>
        </form>
      </div>
      <h3><%= post.title %></h3>
      <img class="post-image" src="<%= post.profileUrl %>" />
      <p><%= post.content %></p>
      <button class="like-button" data-post-id="<%= post.postId %>">
        좋아요 <%= post.like %>
      </button>
      <% post.comments.forEach(function(comment) { %>
      <div class="comment">
        <div class="comment-header">
          <img
            src="<%= comment.user.profileUrl %>"
            alt="<%= comment.user.name %>'s profile picture"
          />
          <h3><%= comment.user.name %></h3>
        </div>
        <p><%= comment.content %></p>

        <form
          class="delete-form"
          action="/post/<%= post.postId %>/comment/<%= comment.commentId %>"
          method="POST"
        >
          <input type="hidden" name="_method" value="DELETE" />
          <button type="submit">댓글 삭제</button>
        </form>
      </div>
      <button
        class="comment-like-button"
        data-comment-id="<%= comment.commentId %>"
      >
        좋아요 <%= comment.clike %>
      </button>
      <% }) %>

      <form
        class="comment-form"
        action="/post/<%= post.postId %>/comment"
        method="POST"
      >
        <label>
          댓글 작성:
          <input
            type="text"
            name="content"
            placeholder="댓글을 입력해주세요"
            required
          />
        </label>
        <button type="submit">댓글 작성하기</button>
      </form>
    </div>
    <% }); %>
    <script src="../side.js"></script>
    <script src="../index.js"></script>
    <script src="../like.js"></script>
  </body>
</html>
